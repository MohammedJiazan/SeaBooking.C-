@model sea_booking.Models.Ship
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml">

<!-- Head -->
<head>
    <meta charset="utf-8" />
    <title>Create</title>

    <meta name="description" content="blank page" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <link rel="shortcut icon" href="~/assets/img/favicon.png" type="image/x-icon">

    <!--Basic Styles-->
    <link href="~/assets/css/bootstrap.min.css" rel="stylesheet" />
    <link id="bootstrap-rtl-link" href="" rel="stylesheet" />
    <link href="~/assets/css/font-awesome.css" rel="stylesheet" />
    <link href="~/assets/css/weather-icons.min.css" rel="stylesheet" />

    <!--Fonts-->
    <link href="../fonts.googleapis.com/css@family=open+sans_3a300italic,400italic,600italic,700italic,400,600,700,300.css"
          rel="stylesheet" type="text/css">

    <!--Beyond styles-->
    <link id="beyond-link" href="~/assets/css/beyond.min.css" rel="stylesheet" />
    <link href="~/assets/css/demo.min.css" rel="stylesheet" />
    <link href="~/assets/css/typicons.min.css" rel="stylesheet" />
    <link href="~/assets/css/animate.min.css" rel="stylesheet" />
    <link id="skin-link" href="" rel="stylesheet" type="text/css" />

    <!--Skin Script: Place this script in head to load scripts for skins and rtl support-->
    <script src="~/assets/js/skins.min.js"></script>
</head>
<!-- /Head -->
<!-- Body -->
<body>
    <!-- Main Container -->
    <form asp-action="Create" enctype="multipart/form-data">

        <div class="main-container container-fluid">
            <div id="error-div" class="alert alert-danger" style="display:none">
                <span>Enter Ship Image</span>
            </div>
            <div class="row">
                <div class="col-lg-12 col-sm-12 col-xs-12">
                    <div class="widget">
                        <div class="widget-body">

                            <div class="row">
                                <div class="col-lg-12 col-sm-12 col-xs-12">
                                    <div class="widget">
                                        <div class="widget-header bordered-top bordered-palegreen">
                                            <span class="widget-caption">Create Ship</span>
                                        </div>
                                        <div class="widget-body">
                                            <div class="collapse in">
                                                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                                    <div class="form-group">

                                                        <label for="definpu">Ship Name</label>
                                                        <span class="input-icon">
                                                            <input asp-for="ShipName" class="form-control" placeholder="Enter Ship Name">
                                                            <i class="fa fa-buysellads"></i>
                                                            <span asp-validation-for="ShipName" class="text-danger"></span>
                                                        </span>
                                                    </div>
                                                    <div class="form-group">
                                                        <label for="definpu">Image</label>
                                                        <span class="input-icon">
                                                            <input asp-for="ImageFile" accept="image/*" />
                                                            <i class="fa fa-image"></i>
                                                            <span asp-validation-for="ImageFile" class="text-danger"></span>
                                                        </span>
                                                    </div>
                                                    <div class="form-group">
                                                        <label for="definpu">Details</label>
                                                        <span class="input-icon">
                                                            <input asp-for="Details" class="form-control" id="definput" placeholder="Details">
                                                            <i class="fa fa-server"></i>
                                                            <span asp-validation-for="Details" class="text-danger"></span>
                                                        </span>
                                                    </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <span class="input-icon">
                                    <i class="fa fa-plus-square"></i>
                                    <input type="submit" value="Add" class="btn btn-primary" />
                                </span>
                            </div>

                        </div><!--Widget Body-->
                    </div><!--Widget-->
                </div>
            </div>
        </div>
        <div>
            <a asp-action="Index" class="btn btn-success">Back to List</a>
        </div>
    </form>

        @section Scripts {
            @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
        }
        <!--Basic Scripts-->
        <script src="~/assets/js/jquery.min.js"></script>
        <script src="~/assets/js/bootstrap.min.js"></script>
        @*<script src="~/assets/js/slimscroll/jquery.slimscroll.min.js"></script>*@

        <!--Beyond Scripts-->
        <script src="~/assets/js/beyond.min.js"></script>

        <!--Page Related Scripts-->

</body>
<!--  /Body -->
</html>
