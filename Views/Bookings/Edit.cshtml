@model sea_booking.Models.Booking
<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml">

<!-- Head -->
<head>
    <meta charset="utf-8" />
    <title>Master Page</title>

    <meta name="description" content="blank page" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <link rel="shortcut icon" href="~/assets/img/favicon.png" type="image/x-icon">

    <!--Basic Styles-->
    <link href="~/assets/css/bootstrap.min.css" rel="stylesheet" />
    <link id="bootstrap-rtl-link" href="" rel="stylesheet" />
    <link href="~/assets/css/font-awesome.css" rel="stylesheet" />
    <link href="~/assets/css/weather-icons.min.css" rel="stylesheet" />

    <!--Fonts-->
    <link href="../fonts.googleapis.com/css@family=open+sans_3a300italic,400italic,600italic,700italic,400,600,700,300.css"
          rel="stylesheet" type="text/css">

    <!--Beyond styles-->
    <link id="beyond-link" href="~/assets/css/beyond.min.css" rel="stylesheet" />
    <link href="~/assets/css/demo.min.css" rel="stylesheet" />
    <link href="~/assets/css/typicons.min.css" rel="stylesheet" />
    <link href="~/assets/css/animate.min.css" rel="stylesheet" />
    <link id="skin-link" href="" rel="stylesheet" type="text/css" />

    <!--Skin Script: Place this script in head to load scripts for skins and rtl support-->
    <script src="~/assets/js/skins.min.js"></script>
</head>
<!-- /Head -->
<!-- Body -->
<body>
    <!-- Main Container -->
    <div class="main-container container-fluid">
        <div class="row">
            <div class="col-lg-12 col-sm-12 col-xs-12">
                <div class="widget">
                    <div class="widget-body">
                        <div class="row">
                            <div class="col-lg-12 col-sm-12 col-xs-12">
                                <div class="widget">
                                    <div class="widget-header bordered-top bordered-palegreen">
                                        <span class="widget-caption">Create Reserve</span>
                                    </div>
                                    <div class="widget-body">
                                        <div class="collapse in">
                                            <form asp-action="Edit">
                                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                                <div class="form-group">
                                                    <label asp-for="Passanger.Name" class="control-label">Passanger Name</label>
                                                    <span class="input-icon">
                                                        <input asp-for="Passanger.Name" class="form-control" placeholder="Enter passanger Name" />
                                                        <span asp-validation-for="Passanger.Name" class="text-danger"></span>
                                                        <i class="fa fa-buysellads"></i>
                                                    </span>
                                                </div>
                                                <div class="form-group">
                                                    <label asp-for="Passanger.Age" class="control-label">Age</label>
                                                    <span class="input-icon">
                                                        <input asp-for="Passanger.Age" class="form-control" placeholder="Enter Age" />
                                                        <span asp-validation-for="Passanger.Age" class="text-danger"></span>
                                                        <i class="fa fa-sort-numeric-asc"></i>
                                                    </span>
                                                </div>
                                                <div class="form-group">
                                                    <label asp-for="Passanger.PassportNo" class="control-label">Passport Number</label>
                                                    <span class="input-icon">
                                                        <input asp-for="Passanger.PassportNo" class="form-control" placeholder="Enter Passport Number" />
                                                        <span asp-validation-for="Passanger.PassportNo" class="text-danger"></span>
                                                        <i class="fa fa-calculator"></i>
                                                    </span>
                                                </div>
                                                <div class="form-group">
                                                    <label asp-for="Passanger.PhoneNo" class="control-label">Phone Number</label>
                                                    <span class="input-icon">
                                                        <input asp-for="Passanger.PhoneNo" class="form-control" placeholder="Phone" />
                                                        <span asp-validation-for="Passanger.PhoneNo" class="text-danger"></span>
                                                        <i class="fa fa-mobile"></i>
                                                    </span>
                                                </div>
                                                <div class="form-group">
                                                    <label asp-for="Passanger.Email" class="control-label">Email</label>
                                                    <span class="input-icon">
                                                        <input asp-for="Passanger.Email" class="form-control" placeholder="Email" />
                                                        <span asp-validation-for="Passanger.Email" class="text-danger"></span>
                                                        <i class="fa fa-buysellads"></i>
                                                    </span>
                                                </div>
                                                @*<div class="form-group">
                                                    <label asp-for="ClassId" class="control-label">Class Name</label>
                                                    <select asp-for="ClassId" class="form-control" asp-items="ViewBag.ClassId"></select>
                                                </div>*@
                                                <div class="form-group">
                                                    <label asp-for="TripId" class="control-label">From</label>
                                                    <select asp-for="TripId" class="form-control" asp-items="ViewBag.TripId"></select>
                                                </div>
                                                <div class="form-group">
                                                    <label asp-for="TripId" class="control-label">To</label>
                                                    <select asp-for="TripId" class="form-control" asp-items="ViewBag.TripId"></select>
                                                </div>
                                                <div class="form-group">
                                                    <label asp-for="isConfirmed" class="control-label">Status Ticket</label>
                                                    <input asp-for="isConfirmed" class="form-control" >
                                                </div>
                                                <div class="form-group">
                                                    <label asp-for="TotalPayment" class="control-label">Price</label>
                                                    <span class="input-icon">
                                                        <input asp-for="TotalPayment" class="form-control" placeholder="Price" />
                                                        <span asp-validation-for="TotalPayment" class="text-danger"></span>
                                                        <i class="fa fa-buysellads"></i>
                                                    </span>
                                                </div>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <input type="submit" value="Save" class="btn btn-primary" />
                        </div>
                    </div><!--Widget Body-->
                </div><!--Widget-->
            </div>
        </div>
    </div>
    <div>
        <a asp-action="Index" class="btn btn-success">Back to List</a>
    </div>
    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
    <script src="~/assets/js/jquery.min.js"></script>
    <script src="~/assets/js/bootstrap.min.js"></script>
    @*<script src="~/assets/js/slimscroll/jquery.slimscroll.min.js"></script>*@

    <!--Beyond Scripts-->
    <script src="~/assets/js/beyond.min.js"></script>

</body>

<!--  /Body -->
</html>
