                                        <datalist name="PassangerId" id="combo-options">
                                        </datalist>*@
                                                        <input asp-for="Passanger.Name" class="form-control" placeholder="Enter passanger Name" />
                                                        <span asp-validation-for="Passanger.Name" class="text-danger"></span>
                                                        <i class="fa fa-buysellads"></i>
                                                    </span>
                                                </div>
                                                <div class="form-group">
                                                    <label asp-for="Passanger.Age" class="control-label">Age</label>
                                                    <span class="input-icon">
                                                        <input asp-for="Passanger.Age" class="form-control" placeholder="Enter Age" />
                                                        <span asp-validation-for="Passanger.Age" class="text-danger"></span>
                                                        <i class="fa fa-sort-numeric-asc"></i>
                                                    </span>
                                                </div>
                                                <div class="form-group">
                                                    <label asp-for="Passanger.PassportNo" class="control-label">Passport Number</label>
                                                    <span class="input-icon">
                                                        <input asp-for="Passanger.PassportNo" class="form-control" placeholder="Enter Passport Number" />
                                                        <span asp-validation-for="Passanger.PassportNo" class="text-danger"></span>
                                                        <i class="fa fa-calculator"></i>
                                                    </span>
                                                </div>
                                                <div class="form-group">
                                                    <label asp-for="Passanger.PhoneNo" class="control-label">Phone Number</label>
                                                    <span class="input-icon">
                                                        <input asp-for="Passanger.PhoneNo" class="form-control" placeholder="Phone" />
                                                        <span asp-validation-for="Passanger.PhoneNo" class="text-danger"></span>
                                                        <i class="fa fa-mobile"></i>
                                                    </span>
                                                </div>
                                                <div class="form-group">
                                                    <label asp-for="Passanger.Email" class="control-label">Email</label>
                                                    <span class="input-icon">
                                                        <input asp-for="Passanger.Email" class="form-control" placeholder="Email" />
                                                        <span asp-validation-for="Passanger.Email" class="text-danger"></span>
                                                        <i class="fa fa-buysellads"></i>
                                                    </span>
                                                </div>

                                                @*<div class="form-group">
                                                    <label asp-for="ClassId" class="control-label">Class Name</label>
                                                    <select asp-for="ClassId" class="form-control" asp-items="ViewBag.ClassId"></select>
                                                </div>*@
                                                <div class="form-group">
                                                    <label asp-for="TripId" class="control-label">Trip Number</label>
                                                    <select asp-for="TripId" class="form-control" asp-items="ViewBag.TripId"></select>
                                                </div>

                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <span class="icon">
                                    <i class="fa fa-plus-square"></i>
                                    <input type="submit" value="Reserve" class="btn btn-primary" />
                                </span>
                            </div>
                        </form>

                    </div><!--Widget Body-->
                </div><!--Widget-->
            </div>
        </div>
    </div>
    <div>
        <a asp-action="Index" class="btn btn-success">Back to List</a>
    </div>
